menu "Graphics"
    hidden if DEV_DEVELOP
    depends on HAVE_GRAPHICS

config CMDQ_ENABLE
    bool "Command Queue"
    default n
    help
        Command Queue enable or not. This option must be enabled first if user want to use hardware 2D engine. RD internal use only.
    help_cht
        啟用命令佇列的功能，若要使用硬體 2D 加速引擎此功能必須先開啟。
    help_chs
        启用命令队列的功能，若要使用硬件 2D 加速引擎此功能必须先开启。

config CMDQ_SIZE
    string "Command Queue Size"
    depends on CMDQ_ENABLE
    default "0x40000"
    help
        Command Queue Size, maximum is 0x4000000 (64M)
        RD internal use only.
    help_cht
        命令佇列的大小。最大值為 0x4000000 (64M)
    help_chs
        命令队列的大小。最大值为 0x4000000 (64M)

config OPENVG_ENABLE
    bool "OpenVG enable or not"
    depends on CMDQ_ENABLE
    default n
    help
        OpenVG enable or not. RD internal use only.
    help_cht
        啟用 OpenVG 的功能。
    help_chs
        启用 OpenVG 的功能。

config M2D_ENABLE
    bool "M2D enable or not"
    depends on CMDQ_ENABLE
    default n
    help
        Enable/Disable hardware 2D graphic acceleration.
    help_cht
        啟用/關閉硬體 2D 繪圖加速的功能。
    help_chs
        启用/关闭硬件 2D 绘图加速的功能。

config OPENVG_SW
    bool "Software OpenVG"
    depends on OPENVG_ENABLE
    default n
    help
        Software implementation for OpenVG
    help_cht
        軟體 OpenVG 實作
    help_chs
        软件 OpenVG 实作

config JPEG_HW_ENABLE
    bool "JPEG H/W enable or not"
    default n
    help
        Enable harware JPEG acceleration
    help_cht
        啟用硬體 JPEG 的功能。
    help_chs
        启用硬件 JPEG 的功能。

config UI_ENC_ENABLE
    bool "UI Surface RL Encode enable or not"
    depends on 0
    default n
    help
        RD internal use only.
    help_cht
        啟用 UI_ENC 支援
    help_chs
        启用 UI_ENC 支援

endmenu


menu "Audio"
    depends on HAVE_AUDIO

config AUDIO_ENABLE
    bool "Audio Enable"
    depends on I2S_ENABLE
    default n
    help
        Enable audio.
    help_cht
        啟用 audio 的功能。
    help_chs
        启用 audio 的功能。

config AUDIO_DAC_MODULE
    file "Audio DAC module | ../../sdk/driver/itp/dac | *.c"
    depends on AUDIO_ENABLE
    default "itp_dac_null.c"
    help
        The driver for audio DAC. It puts in 'sdk\driver\itp\dac\itp_dac_*.c'.
        RD internal use only.
    help_cht
        Audio DAC 驅動程式原始碼，放在 'sdk\driver\itp\dac\itp_dac_*.c'。
    help_chs
        Audio DAC 驱动程序源码，放在 'sdk\driver\itp\dac\itp_dac_*.c'。

config AUDIO_SAMPLING_RATE
    string "Audio Sampling Rate"
    depends on I2S_ENABLE && AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default "8000"
    help
        Audio Sampling Rate Set.
    help_cht
        聲音取樣頻率(8K或16K)。
    help_chs
        聲音取樣頻率(8K或16K)。

config DIALOGUE_PARAMETER_SET
    bool "Dialogue Parameter Set"
    depends on I2S_ENABLE && AUDIO_ENABLE
    default n
    help
        Enable Dialogue Parameter Set.
    help_cht
        設定通話參數選單。
    help_chs
        設定通話參數選單。

config AEC_ENABLE
    bool "Echo Cancellation Enable"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default n
    help
        Enable Echo Cancellation.
    help_cht
        迴音消除。
    help_chs
        迴音消除。

config AEC_DELAY_MS
    string "Echo Cancellation Delay"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET && AEC_ENABLE && 0
    default "70"
    help
        Set delay in milliseconds.
    help_cht
        設定迴音消除的 delay 參數。（單位： millisecond）
    help_chs
        设定迴音消除的 delay 参数。（单位： millisecond）

config SPEAKER_GAIN
    string "Speaker Gain Set"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default "0"
    help
        Set Speaker gain set.
    help_cht
        設定喇叭增益。
    help_chs
        设定喇叭增益。

config MIC_GAIN
    string "Mic Gain Set"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default "1"
    help
        Set mic gain set.
    help_cht
        設定麥克風增益。
    help_chs
        设定麥克風增益。

config NOISE_GATE_ENABLE
    bool "Noise Gate Enable"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default n
    help
        Enable Noise Gate
    help_cht
        噪音閘開啟
    help_chs
        噪音閘開啟

config NOISE_GATE_THRESHOLD
    string "Noise Gate Threshold"
    depends on NOISE_GATE_ENABLE && DIALOGUE_PARAMETER_SET
    default "0.3"
    help
        Set noise gate threshold(adjust mic sensitive).
        parameter set range(0<x<1)
    help_cht
        設定噪音閾值(調整mic收音感度)。
        參數值設定範圍(0<x<1)
    help_chs
        设定噪音閾值(調整mic收音感度)。
        參數值設定範圍(0<x<1)

config SPK_EQUALIZER_ENABLE
    bool "Speaker Equalizer Enable"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default n
    help
        Enable Speaker Equalizer
    help_cht
        Speaker 等化器
    help_chs
        Speaker 等化器

config EQUALIZER_SPKGAIN_SET
    string "Equalizer Speaker Gain Set"
    depends on SPK_EQUALIZER_ENABLE && DIALOGUE_PARAMETER_SET
    default "NULL"
    help
        Set Equalizer Speaker gain set.(frequency:gain:bandwith)
    help_cht
        設定Speaker等化器增益。(頻率:增益:頻帶)
    help_chs
        设定Speaker等化器增益。(頻率:增益:頻帶)

config MIC_EQUALIZER_ENABLE
    bool "MIC Equalizer Enable"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    depends on !CHIP_PKG_IT9910
    default n
    help
        Enable MIC Equalizer
    help_cht
        MIC 等化器
    help_chs
        MIC 等化器

config EQUALIZER_MICGAIN_SET
    string "Equalizer MIC Gain Set"
    depends on MIC_EQUALIZER_ENABLE && DIALOGUE_PARAMETER_SET
    default "\"NULL\""
    help
        Set Equalizer MIC gain set.(frequency:gain:bandwith)
    help_cht
        設定MIC等化器增益。(頻率:增益:頻帶)
    help_chs
        设定MIC等化器增益。(頻率:增益:頻帶)

config AUDIO_CODEC_AACDEC
    bool
    prompt "AAC Decode Codec" if DEV_DEVELOP
    depends on AUDIO_ENABLE
    default n
    help
        Enable AAC decode
    help_cht
        啟用 AAC decode
    help_chs
        启用 AAC decode

