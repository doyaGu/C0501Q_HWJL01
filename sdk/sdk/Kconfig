    string "touch key total number"
    depends on TOUCH_KEYPAD_SET_KEY_NUMBER_ENABLE
    default "16"
    help
        Touch keypad total key number.
    help_cht
        觸控按鍵的按鍵數
    help_chs
        触控按键的按键数

config TOUCH_KEY_USE_I2C
    bool "touch key use I2C interface"
    depends on (KEYPAD_ENABLE && (I2C0_ENABLE || I2C1_ENABLE) )
    default n
    help
        Enable the I2C interface.
    help_cht
        啟用觸控按鍵使用I2C介面
    help_chs
        选用触控按键使用I2C接口

choice
    prompt "Touch protocol type"
    depends on TOUCH_KEY_USE_I2C
    default TOUCH_KEYPAD_I2C0 if DEF_TOUCH_I2C0
    default TOUCH_KEYPAD_I2C1 if DEF_TOUCH_I2C1
    default TOUCH_KEYPAD_I2C0
    help
        Choice the interface of touch keypad
    help_cht
        選用觸控按鍵的介面
    help_chs
        选用触控按键的接口

config TOUCH_KEYPAD_I2C0
    bool "use I2C0 interface"
    depends on (KEYPAD_ENABLE && I2C0_ENABLE)
    help
        Use I2C0 interface.
    help_cht
        使用 I2C0 介面
    help_chs
        使用 I2C0 接口

config TOUCH_KEYPAD_I2C1
    bool "use I2C1 interface"
    depends on (KEYPAD_ENABLE && I2C1_ENABLE)
    help
        Use I2C1 interface.
    help_cht
        使用 I2C1 介面
    help_chs
        使用 I2C1 接口

endchoice

config TOUCH_ENABLE
    bool "Touch Enable"
    depends on (I2C1_ENABLE || I2C0_ENABLE || SPI_ENABLE)
    default n
    help
        Enable touch panel or not.
    help_cht
        啟用觸控螢幕
    help_chs
        启用触控屏

choice
    prompt "Touch protocol type"
    depends on TOUCH_ENABLE
    default TOUCH_I2C0 if DEF_TOUCH_I2C0
    default TOUCH_I2C1 if DEF_TOUCH_I2C1
    default TOUCH_SPI if DEF_TOUCH_SPI
    default TOUCH_I2C0
    help
        Choice the interface of touch pannel
    help_cht
        選用觸控螢幕的介面
    help_chs
        选用触控屏的接口

config TOUCH_I2C0
    bool "use I2C0 interface"
    depends on (TOUCH_ENABLE && I2C0_ENABLE)
    help
        Use I2C0 interface.
    help_cht
        使用 I2C0 介面
    help_chs
        使用 I2C0 接口

