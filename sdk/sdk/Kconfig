config NET_DNS_SD
    bool "Enable DNS Service Discovery"
    depends on NET_ENABLE
    default n

choice
    prompt "DNS Service Discovery Type"
    depends on NET_DNS_SD
    default DNS_SD_RESPONDER if DEF_DNS_SD_RESPONDER
    default DNS_SD_DAEMON if DEF_DNS_SD_DAEMON

config DNS_SD_RESPONDER
    bool "mDNSResponder"

config DNS_SD_DAEMON
    bool "PosixDaemon"

endchoice

config NET_SHAIRPORT
    bool "Enable Shairport"
    depends on NET_DNS_SD
    default n

config NET_SHAIRPORT_DACP
    bool "Enable Shairport DACP"
    depends on NET_DNS_SD
    default n

config BLOCK_UDP
	bool "Enable UDP Packets Release"
	depends on NET_ENABLE
	default n
	help
		Block UDP port
	help_cht
		在傳輸層釋放外部UDP封包的buff。

		在某些情況需要開啟，例如lobby與手機進行SIP影像通話。
	help_chs
		在传输层释放外部UDP数据包的buff。

		在某些情况需要开启，例如lobby与手机进行SIP视频通话。

config SIP_PROXD_TEST
	bool "Enable SIP proxd test"
	depends on NET_ENABLE
	default n
	help
		Test SIP proxd or not
	help_cht
		開啟測試SIP PROXD功能
		siproxd_registration.txt也要更改。
	help_chs
		开启测试SIP PROXD功能
		siproxd_registration.txt也要更改。

