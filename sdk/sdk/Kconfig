    string "Register password"
    depends on SIP_SERVER_TEST
    default "asdf1234"
    help
        Register SIP password.
    help_cht
        SIP註冊密碼。
    help_chs
        SIP注册密码。

config SIP_CALLOUT
    string "SIP callout"
    depends on SIP_SERVER_TEST
    default "032"
    help
        SIP callout by account name.
    help_cht
        SIP要撥打的對象帳號(與註冊帳號同網域)
    help_chs
