    bool "USB1 Enable"
    default n
    help
        Enable USB1 or not.
    help_cht
        啟用 USB1 功能。
    help_chs
        启用 USB1 功能。

config USB_DEVICE
    bool "USB Device Mode"
    default n
    depends on (USB0_ENABLE || USB1_ENABLE)
    help
        USB Device Mode, Going to 'file system->Visible drive in USB device mode' to set up visibale drive in USB device mode.
    help_cht
        啟用 USB 設備端功能, 設定USB DEVICE MODE 可見磁區請至 file system->Visible drive in USB device mode設定。
    help_chs
        启用 USB 设备端功能, 设定USB DEVICE MODE 可见扇区请至 file system->Visible drive in USB device mode设定。

source "$CMAKE_SOURCE_DIR/sdk/driver/usb/gadget/Kconfig"

config IRDA_ENABLE
    bool "IRDA Enable"
    default n
    help
        Enable IrDA driver or not.
    help_cht
        啟用 IrDA 資料傳輸模組。
    help_chs
        启用 IrDA 数据传输模块。

config IR_ENABLE
    bool "IR Enable"
    default n
    help
        Enable IR driver or not.
    help_cht
        啟用 IR 紅外線遙控模組。
    help_chs
        启用 IR 红外线遥控模块。

config IR_TYPE_TABLE
    file "IR type table | ../../sdk/target/ir | *.inc"
    depends on IR_ENABLE
    default "ir_normal.inc"
    help
        IR type table, it puts in 'sdk\target\ir' directory.
    help_cht
        IR 的模組驅動定義碼，放在 'sdk\target\ir' 目錄。
    help_chs
        IR 的模块驱动定义码，放在 'sdk\target\ir' 目录。

config IR_MAPPING_TABLE
    file "IR mapping table | ../../sdk/target/ir | *.inc"
    depends on IR_ENABLE
    default "ir_ite_flash.inc"
    help
        IR mapping table, it puts in 'sdk\target\ir' directory.
    help_cht
        IR 的模組驅動對應碼，放在 'sdk\target\ir' 目錄。
    help_chs
        IR 的模块驱动对应码，放在 'sdk\target\ir' 目录。

