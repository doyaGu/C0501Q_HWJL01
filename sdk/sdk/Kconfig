config GPIO_IR
    string "IR Pin"
    depends on IR_ENABLE
    default "5"
    help
        The GPIO pin number for IR.
    help_cht
        IR 的 GPIO 號碼。
    help_chs
        IR 的 GPIO 接口。

config GPIO_IR_TX
    string "IR TX Pin"
    depends on IR_ENABLE
    default "6"
    help
        The GPIO pin number for IR TX.
    help_cht
        IR TX 的 GPIO 號碼。
    help_chs
        IR TX 的 GPIO 接口。

config GPIO_KEYPAD
    string "Keypad Pins"
    depends on KEYPAD_ENABLE
    default "39, 40, 41"
    help
        For castor3 module, max count of GPIO is 8. The dependency of key number and gpio number is
        1 + 0 = 1
        2 + 1 + 1 = 4
        3 + 2 + 2 + 2 = 9
        4 + 3 + 3 + 3 + 3 = 16
        ...
    help_cht
        Keypad 的 GPIO 號碼。
    help_chs
        Keypad 的 GPIO 接口。

config GPIO_TOUCH_INT
    string "Touch INT Pin"
    depends on TOUCH_ENABLE
    default "44"
    help
        The GPIO pin number for interrupt of touch panel.
    help_cht
        觸控螢幕中斷訊號的 GPIO 號碼。
    help_chs
        触控屏中断信号的 GPIO 接口。

config GPIO_TOUCH_INT_ACTIVE_HIGH
    bool "Touch INT Pin Active High"
    depends on TOUCH_ENABLE
    default n
    help
        Touch panel interrupt pin is active high.
    help_cht
        觸控螢幕中斷觸發時為高電平。
    help_chs
        触控屏中断触发时为高电平。

config GPIO_TOUCH_WAKE
    string "Touch Wake Pin"
    depends on TOUCH_ENABLE
    default "45"
    help
        The GPIO pin number for wake of touch panel.
    help_cht
        觸控螢幕喚醒訊號的 GPIO 號碼。
    help_chs
        触控屏唤醒信号的 GPIO 接口。

config GPIO_TOUCH_RESET
    string "Touch Reset Pin"
    depends on TOUCH_ENABLE
    default "-1"
    help
        The GPIO pin number for reset of touch panel.
    help_cht
        觸控螢幕重置訊號的 GPIO 號碼。
    help_chs
        触控屏重置信号的 GPIO 接口。

config GPIO_POWER_ON
    string "Power On Pin"
    depends on POWER_ON
    default "0"
    help
        The GPIO pin number for power on.
    help_cht
        電源開啟的 GPIO 號碼。
    help_chs
        电源开启的 GPIO 接口。

config GPIO_POWER_OFF_DETECT
    string "Power Off Detect Pin"
    depends on POWER_OFF
    default "1"
    help
        The GPIO pin number for power off detect.
    help_cht
        偵測電源關閉的 GPIO 號碼。
    help_chs
        侦测电源关闭的 GPIO 接口。

config GPIO_BATTERY
    string "Battery Pins"
    depends on BATTERY_ENABLE
    default "32, 31"
    help
        Battery Pins
    help_cht
        電池電量 GPIO 號碼。
    help_chs
        电池电量 GPIO 接口。

config GPIO_BATTERY_CHARGE_DETECT
    string "Battery Charge Detect Pin"
    depends on BATTERY_CHARGE_DETECT
    default "33"
    help
        Battery Charge Detect Pin
    help_cht
        充電偵測 GPIO 號碼。
    help_chs
        充电侦测 GPIO 接口。

config GPIO_GSENSOR
    string "G-Sensor Pin"
    depends on GSENSOR_ENABLE
    default "0"
    help
        Max count of GPIO is 2. The dependency of direction number and gpio number is
        2 ^ 1 = 2
        2 ^ 2 = 4
    help_cht
        G-Sensor 的 GPIO 號碼。最大數量是 2。方向與號碼的相依性是
        2 ^ 1 = 2
        2 ^ 2 = 4
    help_chs
        G-Sensor 的 GPIO 接口。最大数量是 2。方向与号码的相依性是
        2 ^ 1 = 2
        2 ^ 2 = 4

config GPIO_HEADSET
    string "Headset Detect Pin"
    depends on HEADSET_ENABLE
    default "0"
    help
        Headset Detect Pin
    help_cht
        耳機插入偵測 GPIO 號碼。
    help_chs
        耳机插入侦测 GPIO 接口。

config GPIO_SPEAKER
    string "Speaker Enable/Disable Pin"
    depends on SPEAKER_ENABLE
    default "0"
    help
        Speaker Enable/Disable Pin
    help_cht
        喇叭開啟/關閉 GPIO 號碼。
    help_chs
        喇叭开启/关闭 GPIO 接口。

config GPIO_AMPLIFIER_ENABLE
    string "Amplifier Enable/Disable Pin"
    depends on AMPLIFIER_ENABLE
    default "0"
    help
        Amplifier Enable/Disable Pin
    help_cht
        放大器開啟/關閉 GPIO 號碼。
    help_chs
        放大器开启/关闭 GPIO 接口。

