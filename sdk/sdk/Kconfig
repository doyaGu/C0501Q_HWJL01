config I2S_USE_GPIO_MODE_1
    bool "I2S_USE_GPIO_MODE_1"
    depends on (AUDIO_ENABLE && (CHIP_PKG_IT9852 || CHIP_PKG_IT9854 || CHIP_PKG_IT9856))
    default n
    help
        I2S_USE_GPIO_MODE_1

        #35(ZCLK,CODEC-BCLK)
        #32(AMCLK,CODEC-MCLK)
        #33(ZWS,CODEC-DACLRC)
        #36(DATA-IN,CODEC-ADCDAT)
        #34(DATA-OUT,CODEC-DACDAT)
    help_cht
        I2S 使用設置 1 的設定

        #35(ZCLK,CODEC-BCLK)
        #32(AMCLK,CODEC-MCLK)
        #33(ZWS,CODEC-DACLRC)
        #36(DATA-IN,CODEC-ADCDAT)
        #34(DATA-OUT,CODEC-DACDAT)
    help_chs
        I2S 使用设置 1 的设定

        #35(ZCLK,CODEC-BCLK)
        #32(AMCLK,CODEC-MCLK)
        #33(ZWS,CODEC-DACLRC)
        #36(DATA-IN,CODEC-ADCDAT)
        #34(DATA-OUT,CODEC-DACDAT)
        
config I2S_USE_GPIO_MODE_2
    bool "I2S_USE_GPIO_MODE_2"
    depends on (AUDIO_ENABLE && (CHIP_PKG_IT9852 || CHIP_PKG_IT9854 || CHIP_PKG_IT9856))
    default y
    help
        I2S_USE_GPIO_MODE_2

        #10(ZCLK,CODEC-BCLK)
        #11(AMCLK,CODEC-MCLK)
        # 9(ZWS,CODEC-DACLRC)
        #12(DATA-IN,CODEC-ADCDAT)
        #13(DATA-OUT,CODEC-DACDAT)
    help_cht
        I2S 使用設置 2 的設定

        #10(ZCLK,CODEC-BCLK)
        #11(AMCLK,CODEC-MCLK)
        # 9(ZWS,CODEC-DACLRC)
        #12(DATA-IN,CODEC-ADCDAT)
        #13(DATA-OUT,CODEC-DACDAT)
    help_chs
        I2S 使用设置 2 的设定

        #10(ZCLK,CODEC-BCLK)
        #11(AMCLK,CODEC-MCLK)
        # 9(ZWS,CODEC-DACLRC)
        #12(DATA-IN,CODEC-ADCDAT)
        #13(DATA-OUT,CODEC-DACDAT)        

