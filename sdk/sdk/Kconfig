    bool "I2S_USE_GPIO_MODE_3"
    depends on (AUDIO_ENABLE && (CHIP_PKG_IT9852 || CHIP_PKG_IT9854 || CHIP_PKG_IT9856))
    default n
    help
        I2S_USE_GPIO_MODE_3

        #10(ZCLK,CODEC-BCLK)
        # 7(AMCLK,CODEC-MCLK)
        # 9(ZWS,CODEC-DACLRC)
        # 6(DATA-IN,CODEC-ADCDAT)
        # 5(DATA-OUT,CODEC-DACDAT)
    help_cht
