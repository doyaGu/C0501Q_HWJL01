config UART_INTR
    bool "UART Interrupt Enable"
    depends on (UART0_ENABLE || UART1_ENABLE)
    default y
    help
        Enable UART interrupt or not.
    help_cht
        開啟 UART 中斷模式功能。
    help_chs
        开启 UART 中断模式功能。

config UART_BUF_SIZE
    string "UART buffer size"
    depends on UART_INTR
    default "16384"
    help
        UART buffer size Unit(Byte).
    help_cht
        UART 緩衝區大小 單位(Byte)。
    help_chs
        UART 缓衝区大小 单位(Byte)。

config UART_DMA
    bool "UART DMA Enable"
    depends on (UART0_ENABLE || UART1_ENABLE)
    default n
    help
        Enable UART DMA or not.
    help_cht
        開啟 UART DMA模式功能。
    help_chs
        开启 UART DMA模式功能。

