    string "Capture Width"
    depends on CAPTURE_MODULE_ENABLE
    depends on CAPTURE_MODULE != "hm1375.c"
    default "640"
    help
        Capture Width.
    help_cht
        Capture Width。
    help_chs
        Capture Width。

config CAPTURE_HEIGHT
    string "Capture Height"
    depends on CAPTURE_MODULE_ENABLE
    depends on CAPTURE_MODULE != "hm1375.c"
    default "480"
    help
        Capture Height.
    help_cht
        Capture Height。
    help_chs
        Capture Height。

    choice
    prompt "HM1375 Resolution Chioce"
    depends on CAPTURE_MODULE_ENABLE
    depends on CAPTURE_MODULE = "hm1375.c"
    default CAPTURE_MODULE_RESOLUTION_800x600
    help
        Choose HM1375 Sensor Resolution.
    help_cht
        選用攝影機HM1375的寬度和高度.
    help_chs
        选用摄影机HM1375的宽度和高度.

    config CAPTURE_MODULE_RESOLUTION_1280x720
        bool "1280x720"
        help
            HM1375 Sensor Resolution 1280x720.
        help_cht
            HM1375 使用 Resolution 1280x720.
        help_chs
            HM1375 使用 Resolution 1280x720.

    config CAPTURE_MODULE_RESOLUTION_800x600
        bool "800x600"
        help
