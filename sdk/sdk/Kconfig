config SIP_SERVER_TEST
	bool "Enable SIP Test"
	depends on NET_ENABLE
	default n
	help
		Test SIP server or not
		Press "#9" and "管理中心" can callout to cellphone for Indoor and Lobby, respectively.
	help_cht
		開啟測試SIP SERVER功能
		Indoor按"#9"、Lobby按"管理中心"
		可打到外部裝置。
	help_chs
		开启测试SIP SERVER功能
		Indoor按"#9"、Lobby按"管理中心"
		可打到外部装置。

choice
    prompt "Test device"
	default SIP_INDOOR_TEST if DEF_SIP_INDOOR_TEST
    default SIP_LOBBY_TEST if DEF_SIP_LOBBY_TEST
	default SIP_OUTDOOR_TEST if DEF_SIP_OUTDOOR_TEST
    default SIP_INDOOR_TEST
    depends on SIP_SERVER_TEST
    help
        Choose what device you want to test SIP.
    help_cht
        選擇想要測試SIP功能的裝置。
    help_chs
        选择想要测试SIP功能的装置。

config SIP_INDOOR_TEST
    bool "SIP indoor test"
    depends on SIP_SERVER_TEST
    help
        Test SIP by using indoor.
    help_cht
        使用indoor來測試SIP功能。
		除了"#9"可以打到指定的裝置，也可以直接
		輸入對方帳號或IP。

		EX: "#032"、"#192.168.190.61"
    help_chs
        使用indoor来测试SIP功能。
		除了"#9"可以打到指定的装置，也可以直接
		输入对方帐号或IP。

		EX: "#032"、"@192.168.190.61"

config SIP_LOBBY_TEST
    bool "SIP lobby test"
    depends on SIP_SERVER_TEST
    help
        Test SIP by using lobby.
    help_cht
        使用lobby來測試SIP功能。
    help_chs
        使用lobby来测试SIP功能。

config SIP_OUTDOOR_TEST
    bool "SIP outdoor test"
    depends on SIP_SERVER_TEST
    help
        Test SIP by using outdoor.
    help_cht
        使用outdoor來測試SIP功能。
    help_chs
        使用outdoor来测试SIP功能。

endchoice

config REGISTER_ACCOUNT
    string "Register account"
    depends on SIP_SERVER_TEST
    default "031"
    help
        Register SIP account.
    help_cht
        SIP註冊帳號。
    help_chs
        SIP注册帐号。

