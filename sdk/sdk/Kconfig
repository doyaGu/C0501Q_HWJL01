    bool "Amplifier available"
    default n
    help
        Use amplifier for speaker.
    help_cht
        啟用放大器功能。
    help_chs
        启用放大器功能。

config AMPLIFIER_MODULE
    file "Amplifier module | ../../sdk/driver/itp/amplifier | *.c"
    depends on AMPLIFIER_ENABLE
    default "itp_amp_gpio.c"
    help
        The driver for amplifier module, it puts in 'sdk\driver\itp\amplifier\itp_amp_*.c' directory.
    help_cht
        模組驅動程式原始碼，放在 'sdk\driver\itp\amplifier\itp_amp_*.c'
    help_chs
        模块驱动程序源码，放在 'sdk\driver\itp\amplifier\itp_amp_*.c'

config LED_ENABLE
    bool "LED available"
    default n
    help
        Enable LED driver or not.
    help_cht
        開啟 LED 功能。
    help_chs
        开启 LED 功能。

choice
    prompt "Select GPIO or GPIO Extender"
    default LED_USE_GPIO
    depends on LED_ENABLE

config LED_USE_GPIO
    bool "GPIO"
    depends on LED_ENABLE
    help
        LED use GPIO.
    help_cht
        LED模組使用GPIO
    help_chs
        LED模块使用GPIO

config LED_USE_GPIO_EXTENDER
    bool "GPIO Extender"
    depends on (LED_ENABLE && GPIO_EXTENDER_ENABLE)
    help
        LED use GPIO-Extender.
    help_cht
        LED模組使用GPIO-Extender
    help_chs
        LED模块使用GPIO-Extender

endchoice

config SWITCH_ENABLE
    bool "Switch button available"
    default n
    help
        Use switch button.
    help_cht
        開啟切換開關功能。
    help_chs
        开启切换开关功能。

config TUNER_ENABLE
    bool "Tuner available"
    default n
    help
        Use tuner.
    help_cht
        開啟 Tuner 功能。
    help_chs
        开启 Tuner 功能。

config FM2018_ENABLE
    bool "FM2018 available"
    default n
    help
        Use FM2018
    help_cht
        啟用 FM2018
    help_chs
        启用 FM2018

config AUDIOAMP_ENABLE
    bool "AUDIOAMP available"
    default n
    help
        Use audio amp
    help_cht
        啟用 audio amp
    help_chs
        启用 audio amp

config SENSOR_ENABLE
    bool "SENSOR Enable"
    default n
    help
        Enable JEDI encode sensor or not.
    help_cht
        啟用前置攝影機
    help_chs
        启用前置摄影机

    choice
        prompt "Sensor Device"
        depends on SENSOR_ENABLE
        default SENSOR_PIXELPLUS_PO3100 if DEF_SENSOR_PIXELPLUS_PO3100
        default SENSOR_HIMAX_HM1375 if DEF_SENSOR_HIMAX_HM1375
        default SENSOR_OMNIVISION_OV7725 if DEF_SENSOR_OMNIVISION_OV7725
        default SENSOR_NOVATEK_NT99141 if DEF_SENSOR_NOVATEK_NT99141
        default SENSOR_TI_TVP5150 if DEF_SENSOR_TI_TVP5150
        default SENSOR_AR0130 if DEF_SENSOR_AR0130
        help
            Choose Encode Sensor Device.
        help_cht
            選用攝影機裝置
        help_chs
            选用摄影机装置

        config SENSOR_PIXELPLUS_PO3100
            bool "PIXELPLUS_PO3100"

            help
                Sensor PIXELPLUS_PO3100.
            help_cht
                使用 PIXELPLUS_PO3100.
            help_chs
                使用 PIXELPLUS_PO3100.

        config SENSOR_HIMAX_HM1375
            bool "HIMAX_HM1375"
            depends on !CHIP_PKG_IT9910
            help
                Sensor HIMAX_HM1375.
            help_cht
                使用 HIMAX_HM1375
            help_chs
                使用 HIMAX_HM1375

        config SENSOR_OMNIVISION_OV7725
            bool "OMNIVISION_OV7725"
            depends on CHIP_PKG_IT9910
            help
                Sensor OMNIVISION_OV7725.
            help_cht
                使用 OMNIVISION_OV7725.
            help_chs
                使用 OMNIVISION_OV7725.

        config SENSOR_NOVATEK_NT99141
            bool "NOVATEK_NT99141"

            help
                Sensor NOVATEK_NT99141.
            help_cht
                使用 NOVATEK_NT99141.
            help_chs
                使用 NOVATEK_NT99141.

        config SENSOR_TI_TVP5150
            bool "TI_TVP5150"

            help
                Sensor TI_TVP5150.
            help_cht
                使用 TI_TVP5150.
            help_chs
                使用 TI_TVP5150.

        config SENSOR_AR0130
            bool "AR0130"
            depends on CHIP_PKG_IT9910
            help
                Sensor AR0130.
            help_cht
                使用 AR0130.
            help_chs
                使用 AR0130.

    endchoice
    choice
        prompt "Flick"
        depends on SENSOR_ENABLE
        default SENSOR_FLICK_50HZ if DEF_SENSOR_FLICK_50HZ
        default SENSOR_FLICK_60HZ if DEF_SENSOR_FLICK_60HZ
        help
            Choose Encode Sensor Flick Rate.
        help_cht
            選用攝影機頻率
        help_chs
            选用摄影机頻率

        config SENSOR_FLICK_60HZ
            bool "60Hz"
            help
                Sensor 60Hz.
            help_cht
                使用 60Hz
            help_chs
                使用 60Hz

        config SENSOR_FLICK_50HZ
            bool "50Hz"
            help
                Sensor 50Hz.
            help_cht
                使用 50Hz
            help_chs
                使用 50Hz
    endchoice

    config SENSOR_RESOLUTION_W
    string "Video Encode Width"
    depends on SENSOR_ENABLE
    depends on (SENSOR_PIXELPLUS_PO3100 || SENSOR_HIMAX_HM1375 || SENSOR_NOVATEK_NT99141)
    default "800" if DEF_SENSOR_RESOLUTION_W_800
    default "1280"
    help
        Sensor Width.
    help_cht
        攝影機寬度。
    help_chs
        摄影机宽度。

    config SENSOR_RESOLUTION_H
    string "Video Encode Height"
    depends on SENSOR_ENABLE
    depends on (SENSOR_PIXELPLUS_PO3100 || SENSOR_HIMAX_HM1375 || SENSOR_NOVATEK_NT99141)
    default "480" if (DUAL_STREAM_ENABLE && CHIP_PKG_IT9910)
    default "600" if (DEF_SENSOR_RESOLUTION_H_600 && !DUAL_STREAM_ENABLE)
    default "720"
    help
        Sensor Height.
    help_cht
        攝影機高度。
    help_chs
        摄影机高度。

    config SENSOR_BITRATE
    string "Video Encode Bitrate"
    depends on SENSOR_ENABLE
    depends on !CHIP_PKG_IT9910
    depends on (SENSOR_PIXELPLUS_PO3100 || SENSOR_HIMAX_HM1375 || SENSOR_NOVATEK_NT99141)
    default "3000"
    help
        Sensor Bitrate(k/bps).
    help_cht
        攝影機速率(k/bps)。
    help_chs
        摄影机速率(k/bps)。

    config SENSOR_BITRATE
    string "Video Encode Bitrate"
    depends on SENSOR_ENABLE
    depends on CHIP_PKG_IT9910
    depends on (SENSOR_PIXELPLUS_PO3100 || SENSOR_NOVATEK_NT99141)
    default "2000"
    help
        Sensor Bitrate(k/bps).
    help_cht
        攝影機速率(k/bps)。
    help_chs
        摄影机速率(k/bps)。

    config SENSOR_RESOLUTION_W
    string "Video Encode Width"
    depends on SENSOR_ENABLE
    depends on SENSOR_OMNIVISION_OV7725
    default "640"
    help
        Sensor Width.
    help_cht
        攝影機寬度。
    help_chs
        摄影机宽度。

    config SENSOR_RESOLUTION_H
    string "Video Encode Height"
    depends on SENSOR_ENABLE
    depends on SENSOR_OMNIVISION_OV7725
    default "480"
    help
        Sensor Height.
    help_cht
        攝影機高度。
    help_chs
        摄影机高度。

    config SENSOR_BITRATE
    string "Video Encode Bitrate"
    depends on SENSOR_ENABLE
    depends on SENSOR_OMNIVISION_OV7725
    default "1500"
    help
        Sensor Bitrate(k/bps).
    help_cht
        攝影機速率(k/bps)。
    help_chs
        摄影机速率(k/bps)。

    config SENSOR_RESOLUTION_W
