config RS485_4_ENABLE
    bool "RS485_4 Enable"
    default n
    help
        Enable RS485_4 with software Uart or not.
    help_cht
        啟用 RS485_4 與 Software uart 功能。
    help_chs
        启用 RS485_4 与 Software uart 功能。

config RS485_4_BAUDRATE
    string "RS485_4 Baud Rate"
    depends on RS485_4_ENABLE
    default "9600"
    help
        RS485_4 Baud Rate. Maximum Baud Rate = 38400.
    help_cht
        RS485_4 的傳輸速率。  傳輸速率最大值 = 38400。
    help_chs
        RS485_4 的传输速率。  传输速率最大值 = 38400。

config SWUART_CODEC_ENABLE
    bool "SWUART Codec Enable"
    default n
    help
        Enable Software UART or not.
    help_cht
        啟用 Software UART。
    help_chs
        启用 Software UART。

config SWUART_CODEC_BAUDRATE
    string "Software UART Baud Rate"
    depends on SWUART_CODEC_ENABLE
    default "19200"
    help
        Software UART Baud Rate, Max Baud Rate 19200, recommend Baud Rate 19200 14400 9600.
    help_cht
        軟體 Software UART 串列傳輸速率, 最高傳輸速率 19200,建議串列傳輸速率 19200 14400 9600。
    help_chs
        软件 Software UART 波特率, 最高传输速率 19200, 建议波特率 19200 14400 9600。

config MODBUS_ENABLE
    bool "MODBUS Enable"
    depends on RS485_0_ENABLE
    default n
    help
        Enable MODBUS or not.
    help_cht
        啟用 MODBUS 功能。
    help_chs
        启用 MODBUS 功能。

config MODBUS_PARITY
    string "Parity"
    depends on MODBUS_ENABLE
    default "N"
    help
        MODBUS Parity (ex: 'N', 'E', 'O').
    help_cht
        MODBUS 的 parity 檢查。('N':沒有，'E':偶位元，'O':奇位元）
    help_chs
        MODBUS 的 parity 检查。('N':没有，'E':偶位元，'O':奇位元）

config MODBUS_DATA_BIT
    string "Data Bit"
    depends on MODBUS_ENABLE
    default "8"
    help
        MODBUS Data Bit.
    help_cht
        MODBUS 的資料位元數。
    help_chs
        MODBUS 的数据位数。

config MODBUS_STOP_BIT
    string "Stop Bit"
    depends on MODBUS_ENABLE
    default "1"
    help
        MODBUS stop bit.

