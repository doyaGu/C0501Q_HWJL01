    depends on RS485_0_ENABLE
    default "6"     if (CHIP_PKG_IT9852 || CHIP_PKG_IT9854 || CHIP_PKG_IT9856)
    default "9"     if (CHIP_PKG_IT9078 || CHIP_PKG_IT9079)
