config DAC_USE_EXTERNAL_DEPOP_CIRCUIT
    bool "DAC_USE_EXTERNAL_DEPOP_CIRCUIT"
    depends on (AUDIO_DAC_MODULE="itp_dac_ite9070.c")
    default n
    help
        DAC (IT9070) has no built-in de-pop circuit,
        if we have external one, enable it.
    help_cht
        IT9070 內部 DAC 沒有內建 dep-pop 電路，如果使用外部 DAC，就可以開啟它。
    help_chs
        IT9070 内部 DAC 没有内建 dep-pop 电路，如果使用外部 DAC，就可以开启它。

config DAC_EXT_DEPOP_GPIO_PIN
    string "DAC_EXT_DEPOP_GPIO_PIN"
    depends on DAC_USE_EXTERNAL_DEPOP_CIRCUIT
    default "14"
    help
        GPIO pin to control the dep-pop circuit.
    help_cht
        De-pop 電路的 GPIO 控制號碼。
    help_chs
        De-pop 电路的 GPIO 控制号码。

config DAC_EXT_DEPOP_DELAY_MS_T1
    string "DAC_EXT_DEPOP_DELAY_MS_T1"
    depends on DAC_USE_EXTERNAL_DEPOP_CIRCUIT
    default "100"
    help
        De-pop delay time 1 (unit: ms)
    help_cht
        De-pop 的時間延遲 1 （單位: ms）
    help_chs
        De-pop 的时间延迟 1 （单位: ms）

config DAC_EXT_DEPOP_DELAY_MS_T2
    string "DAC_EXT_DEPOP_DELAY_MS_T2"
    depends on DAC_USE_EXTERNAL_DEPOP_CIRCUIT
    default "800"
    help
        De-pop delay time 2 (unit: ms)
    help_cht
        De-pop 的時間延遲 2 （單位: ms）
    help_chs
        D﻿e-pop 的时间延迟 2 （单位: ms）

config PWM_GPIO_SET
    bool "PWM GPIO SET"
    depends on (CHIP_PKG_IT9852 || CHIP_PKG_IT9856)
    default null
    help
        PWM GPIO SET.
        PWM1:VIDEO STC used
        PWM2:FREE
        PWM3:if use Task Statistic Analyzer->DBG_VCD, PWM3 can be set
        PWM4:FREE
        PWM5:BACKLIGHT used
        PWM6:SYSTEM CLOCK used
    help_cht
        PWM GPIO 設定。(未完成..)
        PWM1:VIDEO STC 已使用
        PWM2:未使用
        PWM3:若開啟 Task 統計分析->DBG_VCD ，PWM3則無法設置
        PWM4:未使用
        PWM5:BACKLIGHT 已使用
        PWM6:SYSTEM CLOCK 已使用
    help_chs
        PWM GPIO 設定。
        PWM1:VIDEO STC 已使用
        PWM2:未使用
        PWM3:若開啟 Task 統計分析->DBG_VCD ，PWM3則無法設置
        PWM4:未使用
        PWM5:BACKLIGHT 已使用
        PWM6:SYSTEM CLOCK 已使用


config PWM1_GPIO_PIN
    string "PWM1 GPIO pin"
    depends on (PWM_GPIO_SET && !VIDEO_ENABLE)
    help
        PWM0 GPIO set
        GPIO pin select:4、15、22、39、46、68、81、82
    help_cht
        PWM0 GPIO 設置。
        GPIO pin :4、15、22、39、46、68、81、82
    help_chs
        PWM0 GPIO 設置。
        GPIO pin :4、15、22、39、46、68、81、82


config PWM2_GPIO_PIN
    string "PWM2 GPIO pin"
    depends on PWM_GPIO_SET
    default null
    help
        PWM1 GPIO set
        GPIO pin select:5、14、26、40、47、67、80、83
    help_cht
        PWM1 GPIO 設置。
        GPIO pin :5、14、26、40、47、67、80、83
    help_chs
        PWM1 GPIO 設置。
        GPIO pin :5、14、26、40、47、67、80、83

config PWM3_GPIO_PIN
    string "PWM3 GPIO pin"
    depends on (PWM_GPIO_SET && !DBG_VCD)
    default null
    help
        PWM2 GPIO set
        GPIO pin select:6、17、27、41、48、66、79、84
        if use Task Statistic Analyzer->DBG_VCD, PWM3 can be set
    help_cht
        PWM2 GPIO 設置。
        GPIO pin :6、17、27、41、48、66、79、84
        若開啟 Task 統計分析->DBG_VCD ，PWM3則無法設置
    help_chs
        PWM2 GPIO 設置。
        GPIO pin :6、17、27、41、48、66、79、84
        若開啟 Task 統計分析->DBG_VCD ，PWM3則無法設置

config PWM4_GPIO_PIN
    string "PWM4 GPIO pin"
    depends on PWM_GPIO_SET
    default null
    help
        PWM3 GPIO set
        GPIO pin select:7、42、49、65、78、85
    help_cht
        PWM3 GPIO 設置。
        GPIO pin 選擇:7、42、49、65、78、85
    help_chs
        PWM3 GPIO 設置。
        GPIO pin :7、42、49、65、78、85

config PWM5_GPIO_PIN
    string "PWM5 GPIO pin"
    depends on (PWM_GPIO_SET && !BACKLIGHT_ENABLE)
    help
        PWM4 GPIO set
        GPIO pin select:0、8、43、50、64、77、86
    help_cht
        PWM4 GPIO 設置。
        GPIO pin :0、8、43、50、64、77、86
    help_chs
        PWM4 GPIO 設置。
        GPIO pin :0、8、43、50、64、77、86

config PWM6_GPIO_PIN
    string "PWM6 GPIO pin"
    depends on 0
    help
        PWM1 GPIO set
        GPIO pin select:1、21、44、51、63、76、87
        FreeRTOS system usded,can not be chenged。
    help_cht
        PWM1 GPIO 設置。
        GPIO pin :1、21、44、51、63、76、87
        FreeRTOS system使用、無法更動。
    help_chs
        PWM1 GPIO 設置。
        GPIO pin :1、21、44、51、63、76、87
        FreeRTOS system使用、無法更動。

config GPIO_RSL_MASTER_CLK
    string "RSL Master Clock Pin"
    depends on RSL_MASTER
    default "-1"
    help
        The GPIO pin number for RSL_MASTER Clock.
    help_cht
        RSL Master 的 Clock GPIO 號碼。
    help_cht
        RSL Master 的 Clock GPIO 接口。

config GPIO_RSL_MASTER_DATA
    string "RSL Master Data Pin"
    depends on RSL_MASTER
    default "-1"
    help
        The GPIO pin number for RSL(Remote Serial Link) Data.
    help_cht
        RSL(Remote Serial Link) Master 的 Data GPIO 號碼。
    help_cht
        RSL(Remote Serial Link) Master 的 Data GPIO 接口。

config GPIO_RSL_SLAVE_CLK
    string "RSL Slave Clock Pin"
    depends on RSL_SLAVE
    default "-1"
    help
        The GPIO pin number for RSL(Remote Serial Link) Slave Clock.
    help_cht
        RSL(Remote Serial Link) Slave 的 Clock GPIO 號碼。
    help_cht
        RSL(Remote Serial Link) Slave 的 Clock GPIO 接口。

config GPIO_RSL_SLAVE_DATA
    string "RSL Slave Data Pin"
    depends on RSL_SLAVE
    default "-1"
    help
        The GPIO pin number for RSL(Remote Serial Link) Slave Data.
    help_cht
        RSL(Remote Serial Link) Slave 的 Data GPIO 號碼。
    help_cht
        RSL(Remote Serial Link) Slave 的 Data GPIO 接口。           

config GPIO_SW_PWM0
    string "SW PWM0 Pin"
    depends on SW_PWM0_ENABLE
    default "-1"
    help
        The GPIO pin number for SW PWM0.
    help_cht
        SW PWM0 的 GPIO 號碼。
    help_cht
        SW PWM0 的 GPIO 接口。           

config GPIO_SW_PWM1
    string "SW PWM1 Pin"
    depends on SW_PWM1_ENABLE
    default "-1"
    help
        The GPIO pin number for SW PWM1.
    help_cht
        SW PWM1 的 GPIO 號碼。
    help_cht
        SW PWM1 的 GPIO 接口。           

config GPIO_SW_PWM2
    string "SW PWM2 Pin"
    depends on SW_PWM2_ENABLE
    default "-1"
    help
        The GPIO pin number for SW PWM2.
    help_cht
        SW PWM2 的 GPIO 號碼。
    help_cht
        SW PWM2 的 GPIO 接口。           

config GPIO_SW_PWM3
    string "SW PWM3 Pin"
    depends on SW_PWM3_ENABLE
    default "-1"
    help
        The GPIO pin number for SW PWM3.
    help_cht
        SW PWM3 的 GPIO 號碼。
    help_cht
        SW PWM3 的 GPIO 接口。           
endmenu


menu "Network"

config NET_ENABLE
    bool "Enable Network"
    default n
    help
        Enable network function or not.
    help_cht
        啟用網路功能。
    help_chs
        启用网路功能。

config NET_ETHERNET
    bool "Enable Ethernet module"
    depends on NET_ENABLE
    default n
    help
        Enable Ethernet module or not.
    help_cht
        開啟 Ethernet 模組功能。
    help_chs
        开启 Ethernet 模块功能。

choice
    prompt "External device type"
    default NET_RTL8304MB if DEF_NET_RTL8304MB
    default NET_AMEBA_SDIO if DEF_NET_AMEBA_SDIO
    default NET_IP101GR if DEF_NET_IP101GR
    default NET_LAN8720 if DEF_NET_LAN8720
    default NET_RTL8211F if DEF_NET_RTL8211F
    default NET_RTL8201FL
    depends on NET_ETHERNET
    help
        External device type.
    help_cht
        外接裝置型號。
    help_chs
        外接装置型号。

config NET_RTL8201FL
    bool "RTL8201FL"
    depends on NET_ETHERNET
    help
        Single-chip/single-port 10/100Mbps ethernet phyceiver.
    help_cht
        單晶片/單埠 10/100Mbps 乙太網路收發器。
    help_chs
        单芯片/单端口 10/100Mbps 以太网络收发器。

config NET_IP101GR
    bool "IP101GR"
    depends on NET_ETHERNET
    help
        Single-chip/single-port 10/100Mbps ethernet transceiver.
    help_cht
        單晶片/單埠 10/100Mbps 乙太網路收發器。
    help_chs
        单芯片/单端口 10/100Mbps 以太网络收发器。

config NET_LAN8720
    bool "LAN8720"
    depends on NET_ETHERNET
    help
        Single-chip/single-port 10/100Mbps ethernet transceiver.
        It does not support link interrupt.
    help_cht
        單晶片/單埠 10/100Mbps 乙太網路收發器。
        不支援連接中斷功能。
    help_chs
        单芯片/单端口 10/100Mbps 以太网络收发器。
        不支持连接中断功能。

config NET_RTL8211F
    bool "RTL8211F"
    depends on NET_ETHERNET
    help
        Single-chip/single-port 10/100/1000Mbps ethernet phyceiver.
    help_cht
        單晶片/單埠 10/100/1000Mbps 乙太網路收發器。
    help_chs
        单芯片/单端口 10/100/1000Mbps 以太网络收发器。

config NET_RTL8304MB
    bool "RTL8304MB"
    depends on NET_ETHERNET
    help
        4-port 10/100Mbps ethernet switch controller.
    help_cht
        4-埠 10/100Mbps 乙太網路交換器。
    help_chs
        4-端口 10/100Mbps 以太网络交换器。

config NET_AMEBA_SDIO
    bool "Ameba iNIC (SDIO)"    if DEV_DEVELOP
    depends on (NET_ETHERNET && MMC_ENABLE)
    help
        Realtek ameba iNIC with SDIO interface.
    help_cht
        Realtek ameba iNIC with SDIO interface.
    help_chs
        Realtek ameba iNIC with SDIO interface.

endchoice

config NET_MAC_CLOCK_INVERSE
    string "MAC clock inverse"
    depends on (NET_ETHERNET)
    default "1"
    help
        Clock inverse. (0: normal, 1: inverse)
    help_cht
        Clock 反相。(0: 正常, 1: 反相)
    help_chs
        Clock 反相。(0: 正常, 1: 反相)

config NET_MAC_CLOCK_DELAY
    string "MAC clock delay"
    depends on (NET_ETHERNET)
    default "0x0F"
    help
        Clock delay value. (0x00~0xFF)
    help_cht
        Clock 延遲。(0x00~0xFF)
    help_chs
        Clock 延迟。(0x00~0xFF)

config NET_MAC_INIT_ON_BOOTLOADER
    bool "Initialize MAC on bootloader"
    depends on (NET_ETHERNET && !NET_RTL8304MB)
    default n
    help
        Initialize MAC on bootloader or not.
    help_cht
        是否在 bootloader 中初始化 Mac。
    help_chs
        是否在 bootloader 中初始化 Mac。


config NET_ETHERNET_PHY_ADDR
    string "Ethernet PHY's address"
    depends on (NET_ETHERNET && !NET_AMEBA_SDIO && !NET_RTL8304MB)
    default "0"
    help
        PHY address
    help_cht
        PHY 的位址。
    help_chs
        PHY 的位址。

config NET_ETHERNET_LINK_INTR
    bool "Enable Ethernet link interrupt"
    depends on (NET_ETHERNET &&  !NET_AMEBA_SDIO && !NET_LAN8720)
    default y
    help
        Enable Ethernet link interrupt
    help_cht
        啟用連接中斷功能。
    help_chs
        启用连接中断功能。

config NET_ETHERNET_WAKE_ON_LAN
    bool "Enable Ethernet Wake on Lan support"
    depends on (NET_ETHERNET && NET_RTL8201FL && !NET_AMEBA_SDIO)
    default n
    help
        Enable Ethernet Wake on LAN
    help_cht
        啟用網路喚醒功能。
    help_chs
        启用网络唤醒功能。

config NET_ETHERNET_MAC_ADDR_RANDOM
    bool "Random MAC address"
    depends on NET_ETHERNET
    default n
    help
        Randomize MAC address if not available.
    help_cht
        亂數決定 MAC address。
    help_chs
        随机数决定 MAC address。

config NET_ETHERNET_MAC_ADDR_DEFAULT
    string "Default ethernet MAC address"
    depends on (NET_ETHERNET && !NET_ETHERNET_MAC_ADDR_RANDOM)
    default "0x02, 0x22, 0x33, 0x44, 0x55, 0x66"
    help
        Default ethernet MAC address.
    help_cht
        MAC address 預設值。
    help_chs
        MAC address 默认值。

config NET_ETHERNET_MAC_ADDR_STORAGE
    bool "MAC address data is stored in static storage"
    depends on (NET_ETHERNET && (NAND_ENABLE || NOR_ENABLE || SD0_ENABLE || SD1_ENABLE))
    default n
    help
        MAC address data is stored in static storage.
    help_cht
        將 MAC address 儲存在內部儲存裝置。
    help_chs
        将 MAC address 储存在内部储存装置。

choice
    prompt "MAC address data location"
    depends on NET_ETHERNET_MAC_ADDR_STORAGE
    default NET_ETHERNET_MAC_ADDR_NAND if DEF_NET_ETHERNET_MAC_ADDR_NAND
    default NET_ETHERNET_MAC_ADDR_NOR if DEF_NET_ETHERNET_MAC_ADDR_NOR
    default NET_ETHERNET_MAC_ADDR_SD0 if DEF_NET_ETHERNET_MAC_ADDR_SD0
    default NET_ETHERNET_MAC_ADDR_SD1 if DEF_NET_ETHERNET_MAC_ADDR_SD1
    default NET_ETHERNET_MAC_ADDR_NOR
    help
        The data location of MAC address
    help_cht
        MAC address 存放位置。
    help_chs
        MAC address 存放位置。

config NET_ETHERNET_MAC_ADDR_NAND
    bool "MAC address data in NAND"
    depends on NAND_ENABLE
    help
        MAC address data in NAND.
    help_cht
        將 MAC address 儲存在 NAND。
    help_chs
        将 MAC address 储存在 NAND。

config NET_ETHERNET_MAC_ADDR_NOR
    bool "MAC address data in NOR"
    depends on NOR_ENABLE
    help
        MAC address data in NOR.
    help_cht
        將 MAC address 儲存在 NOR。
    help_chs
        将 MAC address 储存在 NOR。

config NET_ETHERNET_MAC_ADDR_SD0
    bool "MAC address data in SD0"
    depends on SD0_ENABLE
    help
        MAC address data in SD0.
    help_cht
        將 MAC address 儲存在 SD0。
    help_chs
        将 MAC address 储存在 SD0。

config NET_ETHERNET_MAC_ADDR_SD1
    bool "MAC address data in SD1"
    depends on SD1_ENABLE
    help
        MAC address data in SD1.
    help_cht
        將 MAC address 儲存在 SD1。
    help_chs
        将 MAC address 储存在 SD1。

endchoice

config NET_ETHERNET_MAC_ADDR_POS
    string "Position of MAC address data"
    depends on NET_ETHERNET_MAC_ADDR_STORAGE
    default "0x200000" if NET_ETHERNET_MAC_ADDR_NAND
    default "0xF0000"
    help
        Position of MAC address data in internal storage.
        It must located on the reserved area, and usually located on the place where between bootloader and rom image.
        
    help_cht
        內部儲存裝置位置。必須放在未格式化區域，通常是放在 Bootloader 與 ROM 之間的區域。
        (若存放於NAND，則必須是NAND BLOCK SIZE的倍數)
    help_chs
        内部储存装置位置。必须放在未格式化区域，通常是放在 Bootloader 与 ROM 之间的区域。
        (若存放在NAND，則必须是NAND BLOCK SIZE的倍数)

config NET_ETHERNET_MAC_ADDR_UPGRADE
    bool "Upgrade MAC address to storage if not exist"
    depends on NET_ETHERNET_MAC_ADDR_STORAGE
    default n
    help
        Upgrade MAC address to storage if not exist.
    help_cht
        如果 MAC address 尚未儲存過，將 Mac address 儲存起來。
    help_chs
        如果 MAC address 尚未储存过，将 Mac address 储存起来。

config NET_ETHERNET_MAC_ADDR_VERIFY_CODE
    string "MAC address verify number"
    depends on NET_ETHERNET_MAC_ADDR_STORAGE
    default "IT"
    help
        MAC address verify number. Must be 2 characters.
    help_cht
        MAC address 檢查碼. 必須是2個字元。
    help_chs
        MAC address 检查码. 必须是2个字元。

config NET_ETHERNET_DHCP
    bool "Enable Ethernet DHCP"
    depends on NET_ETHERNET
    default n
    help
        Enable Ethernet DHCP or not on Ethernet as default.
    help_cht
        開啟 DHCP 功能。
    help_chs
        开启 DHCP 功能。

config NET_ETHERNET_DHCP_BY_DNS
    bool "Enable Ethernet DHCP By DNS"
    depends on NET_ETHERNET
    default n
    help
        Enable get IP from DHCP by DNS.
    help_cht
        透過DNS解析DHCP伺服器，平常不用開啟。
    help_chs
        透过DNS解析DHCP服务器，平常不用开启。

config NET_ETHERNET_AUTOIP
    bool "Enable Ethernet AUTOIP"
    depends on NET_ETHERNET
    default n
    help
        Enable Ethernet AUTOIP or not on Ethernet as default.
    help_cht
        開啟 AUTO-IP 功能。
    help_chs
        开启 AUTO-IP 功能。

config NET_ETHERNET_IPADDR
    string "Ethernet default IP address"
    depends on (NET_ETHERNET && !NET_ETHERNET_DHCP && !NET_ETHERNET_AUTOIP && !NET_ETHERNET_MULTI_INTERFACE_DHCP)
    default "192.168.1.1"
    help
        Ethernet default IP address.
    help_cht
        IP address 預設值。
    help_chs
        IP address 默认值。

config NET_ETHERNET_NETMASK
    string "Ethernet default netmask"
    depends on (NET_ETHERNET && !NET_ETHERNET_DHCP && !NET_ETHERNET_AUTOIP && !NET_ETHERNET_MULTI_INTERFACE_DHCP)
    default "255.255.255.0"
    help
        Ethernet default netmask.
    help_cht
        Netmask 預設值。
    help_chs
        Netmask 默认值。

config NET_ETHERNET_GATEWAY
    string "Ethernet default gateway"
    depends on (NET_ETHERNET && !NET_ETHERNET_DHCP && !NET_ETHERNET_AUTOIP && !NET_ETHERNET_MULTI_INTERFACE_DHCP)
    default "192.168.1.254"
    help
        Ethernet default gateway.
    help_cht
        Gateway 預設值。
    help_chs
        Gateway 默认值。

config NET_ETHERNET_POLL_INTERVAL
    string "Ethernet poll interval (ms)"
    depends on NET_ETHERNET
    default "50"
    help
        Ethernet poll interval (ms), 0 to disable poll.
    help_cht
        探查網路狀態間隔 (單位: ms)， 0 表示不探查。
    help_chs
        探查网络状态间隔 (单位: ms)， 0 表示不探查。

config NET_ETHERNET_COUNT
    string "Ethernet count"
    depends on NET_ETHERNET
    default "1"
    help
        The number of Ethernet.
    help_cht
        網路卡數量。
        如要使用路由功能，請把數量改為2，並開啟Ethernet Route。
    help_chs
        网络卡数量。
        如要使用路由功能，请把数量改为2，并开启Ethernet Route。

if NET_ETHERNET_COUNT = "2" && NET_ETHERNET
config NET_ETHERNET_MULTI_INTERFACE
    bool "Enable Ethernet Route"
    depends on NET_ETHERNET
    default n
    help
        Enable Ethernet simple route.
    help_cht
        開啟乙太網路簡單路由功能。
    help_chs
        开启乙太网络簡單路由功能。

#config NET_ETHERNET_INTERFACE_0
#    string "Ethernet interface 0"
#    depends on (NET_ETHERNET && NET_ETHERNET_MULTI_INTERFACE)
#    default "192.168.191.1"
#    help
#        Ethernet interface 0.
#    help_cht
#        網路介面0，收發PC端的封包，輸入PC端的預設閘道。
#    help_chs
#        网络接口0，收发PC端的数据包，输入PC端的预设网关。

#config NET_ETHERNET_INTERFACE_1
#    string "Ethernet interface 1"
#    depends on (NET_ETHERNET && NET_ETHERNET_MULTI_INTERFACE)
#    default "192.168.190.1"
#    help
#        Ethernet interface 1.
#    help_cht
#        網路介面1，輸入門鈴機的預設閘道。
#    help_chs
#        网络接口1，输入门铃机的预设网关。

config NET_ETHERNET_MULTI_INTERFACE_DHCP
    bool "Enable Ethernet Multi-Interface DHCP"
    depends on (NET_ETHERNET && NET_ETHERNET_MULTI_INTERFACE)
    default n
    help
        Enable Ethernet DHCP of Multi-Interface or not on Ethernet as default.
    help_cht
        開啟多網路介面的 DHCP 功能(目前只有給介面0使用)。
    help_chs
        开启多网络接口的 DHCP 功能(目前只有给接口0使用)。
endif

config NET_WIFI
    bool "Enable WiFi module"
    depends on (NET_ENABLE && (USB0_ENABLE || USB1_ENABLE))
    default n
    help
        Enable WiFi module.
    help_cht
        啟用 WiFi 模組。
    help_chs
        启用 WiFi 模块。

config NET_WIFI_MGR
    bool
    depends on NET_WIFI
    default y
    help
        Enable Wifi mgr
    help_cht
        啟用 Wifi mgr
    help_chs
        启用 Wifi mgr


config NET_WIFI_POLL_INTERVAL
    string "WiFi poll interval (ms)"
    depends on NET_WIFI
    default "50"
    help
        WiFi poll interval (ms), 0 to disable poll.
    help_cht
        探查 WiFi 狀態間隔 (單位: ms)， 0 表示不探查。
    help_chs
        探查 WiFi 状态间隔 (单位: ms)， 0 表示不探查。

config NET_WIFI_8188EUS
    bool "Use WiFi 8188EUS"
    depends on NET_WIFI
    default n
    help
        Enable WiFi module.
    help_cht
        啟用 WiFi 模組8188EUS。
    help_chs
        启用 WiFi 模块8188EUS。

config NET_WIFI_WPA
    bool "Enable WiFi WPA"
    depends on NET_WIFI
    default y
    help
        Enable WiFi WPA
    help_cht
        啟用 WiFi WPA 功能。
    help_chs
        启用 WiFi WPA 功能。

config NET_WIFI_HOSTAPD
    bool "Enable WiFi softAP"
    depends on (NET_WIFI)
    default n
    help
        Enable WiFi softAP
    help_cht
        啟用 WiFi softAP 功能，將裝置模擬成無線AP。
    help_chs
        启用 WiFi softAP 功能，将装置模拟成无线AP。

config NET_WIFI_IPADDR
    string "SoftAP default IP address"
    depends on (NET_WIFI && NET_WIFI_HOSTAPD)
    default "192.168.0.1"
    help
        SoftAP default IP address
    help_cht
        SoftAP 預設的 IP 位址。
    help_chs
        SoftAP 默认的 IP 地址。

config NET_WIFI_NETMASK
    string "SoftAP default netmask"
    depends on (NET_WIFI && NET_WIFI_HOSTAPD)
    default "255.255.255.0"
    help
        SoftAP default netmask
    help_cht
        SoftAP 預設的 netmask 設定。
    help_chs
        SoftAP 默认的 netmask 设定。

config NET_WIFI_GATEWAY
    string "SoftAP default gateway"
    depends on (NET_WIFI && NET_WIFI_HOSTAPD)
    default "192.168.0.1"
    help
        SoftAP default gateway
    help_cht
        SoftAP 預設的 gateway 設定。
    help_chs
        SoftAP 默认的 gateway 设定。

config NET_WIFI_CHANNEL
    string "SoftAP default channel"
    depends on (NET_WIFI && NET_WIFI_HOSTAPD)
    default "10"
	
#config NET_WIFI_HIDDENSSID
#    string "SoftAP ignore broadcast ssid : 0,1,2"
#    depends on (NET_WIFI && NET_WIFI_HOSTAPD)
#    default "0"

config NET_WIFI_SSID
    string "SoftAP default ssid"
    depends on (NET_WIFI && NET_WIFI_HOSTAPD)
    default "iteAP"

config NET_WIFI_WPA_ENABLE
    bool "Enable WiFi HOSTAPD WPA"
    depends on(NET_WIFI && NET_WIFI_HOSTAPD)
    default n

config NET_WIFI_PW
    string "SoftAP default password"
    depends on (NET_WIFI && NET_WIFI_HOSTAPD && NET_WIFI_WPA_ENABLE)
    default "12345678"


config NET_WIFI_FIND_BEST_CHANNEL
    bool "Enable WiFi Find best channel"
    depends on NET_WIFI
    default n

config NET_WIFI_TRANS_LED
    bool "Enable WiFi transmit LED"
    depends on NET_WIFI
    default n
    help
        Enable WiFi transmit LED
    help_cht
        開啟使用 WiFi 傳輸狀態 LED。
    help_chs
        开启使用 WiFi 传输状态 LED。

config NET_WIFI_TRANS_LED_NUM
    string "WiFi transmit LED number"
    depends on (NET_WIFI && NET_WIFI_TRANS_LED)
    default "0"
    help
        WiFi transmit LED number
    help_cht
        WiFi 傳輸狀態 LED 個數。
    help_chs
        WiFi 传输状态 LED 个数。

config NET_WIFI_MP_SSID
    string "WiFi SSID for MP auto connect"
    depends on NET_WIFI
    default "audiolink"
    help
        WiFi SSID for MP auto connect
    help_cht
        WiFi SSID
    help_chs
        WiFi SSID

