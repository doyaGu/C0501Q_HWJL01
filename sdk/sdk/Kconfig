    string "RS485_0 TX Enable Pin"
    depends on RS485_0_ENABLE
    default "7"     if (CHIP_PKG_IT9852 || CHIP_PKG_IT9854 || CHIP_PKG_IT9856)
    default "8"     if (CHIP_PKG_IT9078 || CHIP_PKG_IT9079)
    default "8"
