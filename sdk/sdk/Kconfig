config RS485_1_BAUDRATE
    string "RS485_1 Baud Rate"
    depends on RS485_1_ENABLE
    default "115200"
    help
        RS485_1 Baud Rate.
    help_cht
        RS485_1 的傳輸速率。
    help_chs
        RS485_1 的传输速率。

config RS485_1_INTR
    bool "RS485_1 Interrupt Enable"
    depends on RS485_1_ENABLE
    default y
    help
        Enable RS485_1 interrupt or not.
    help_cht
        開啟 RS485_1 中斷模式功能。
    help_chs
        开启 RS485_1 中断模式功能。

config RS485_1_BUF_SIZE
    string "RS485_1 buffer size"
    depends on RS485_1_INTR
    default "1024"
    help
        RS485_1 buffer size.
    help_cht
        RS485_1 緩衝區大小。
    help_chs
        RS485_1 缓冲区大小。

config RS485_1_DMA
    bool "RS485_1 DMA Enable"
    depends on RS485_1_ENABLE
    default n
    help
        Enable RS485_1 DMA or not.
    help_cht
        開啟 RS485_1 DMA模式功能。
    help_chs
        开启 RS485_1 DMA模式功能。

config RS485_1_DMA_BUF_SIZE
    string "RS485_1 DMA buffer size"
    depends on RS485_1_DMA
    default "1024"
    help
        RS485_1 DMA buffer size.
    help_cht
        RS485_1 DMA 緩衝區大小。
    help_chs
        RS485_1 DMA 缓衝区大小。

