#
# For a description of the syntax of this configuration file,
# see Documentation/kbuild/kconfig-language.txt.
#

mainmenu "Project Configuration"

config TEST_VIDEO
    bool
    default y
    select HAVE_LCD
    select HAVE_VIDEO
    select HAVE_AUDIO

config CMAKE_SOURCE_DIR
    string
    option env="CMAKE_SOURCE_DIR"

config DEF_CHIP_PKG_IT9079
    def_bool y

config RAM_INIT_SCRIPT
    default "IT9079A1_Initial_DDR2_Mem_tiling_pitch2048_360MHZ.scr"

config LCD_ENABLE
    def_bool y

config LCD_WIDTH
    default "800"

config LCD_HEIGHT
    default "480"

config LCD_INIT_SCRIPT
    default "lcd_800_480_innolux_7inch_888.txt.in"

config BACKLIGHT_ENABLE
    def_bool y

config BACKLIGHT_DUTY_CYCLES
    default "95, 92, 88, 82, 75, 65, 55, 40, 25, 5"

config BACKLIGHT_DEFAULT_DUTY_CYCLE
    default "5"

config UART1_ENABLE
    def_bool y

config GPIO_UART1_TX
    default "5"

config GPIO_UART1_RX
    default "-1"

config DEF_DBG_UART1
    def_bool y

config DBG_INIT_SCRIPT
    default "IT9079A1_Initial_DDR2_Mem_tiling_pitch2048_320MHZ.txt"

config BUILD_FFMPEG
    def_bool y

config VIDEO_ENABLE
    def_bool y

config STC_ENABLE
    def_bool y

config FS_FAT
    def_bool y

config USB0_ENABLE
    def_bool y

config MSC_ENABLE
    def_bool y

config TASK_DRIVE_PROBE
    def_bool y

config I2S_ENABLE
    def_bool y

config I2S_OUTPUT_PIN_ENABLE
    def_bool n

config I2S_SPDIF_ENABLE
    def_bool n

config RECORD_VIDEO
    def_bool y

source "$CMAKE_SOURCE_DIR/sdk/Kconfig"

menu "Test H.264"

    choice
        prompt "Test H.264"
        default TEST_CONTAINER

    config TEST_ELEMENTARY
        bool "ElementaryStream format (h264, 264, etc)"

    config TEST_CONTAINER
        bool "Container format (MKV, MP4, etc)"

    #config TEST_GOLDEN
    #    bool "Golden bitstream file format (bmp)"

    endchoice

endmenu
