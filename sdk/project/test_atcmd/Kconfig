mainmenu "Project Configuration"

config TEST_UART
    bool
    default y
    #select HAVE_LCD
    #select HAVE_GRAPHICS
    #select HAVE_AUDIO
    #select HAVE_VIDEO

config DEF_CHIP_PKG_IT9856
    def_bool y
    
config RAM_INIT_SCRIPT
    default "IT9850A0_400MHz.scr"        

config CMAKE_SOURCE_DIR
	string
	option env="CMAKE_SOURCE_DIR"
	
config FS_FAT
	def_bool n
	
config UART0_ENABLE	
    def_bool y
    
config UART1_ENABLE
    def_bool y
    
config GPIO_UART1_TX
    default "4"

config GPIO_UART1_RX
    default "-1"

config UART0_BAUDRATE
    default "9600"
    
config GPIO_UART0_TX
    default "81"
    
config GPIO_UART0_RX    
    default "80"
    
config NOR_ENABLE
	def_bool y
	
config SPI_ENABLE

config SPI0_MOSI_GPIO
    default "18"

config SPI0_MISO_GPIO
    default "19"

config SPI0_CLOCK_GPIO
    default "20"

config SPI0_CHIP_SEL_GPIO
    default "14"
    
config DEF_DBG_UART1
    def_bool y
    
config UART_INTR    
    def_bool y
    
config DBG_INIT_SCRIPT
    default "IT9850A0_400MHz.txt"    	
	
source "$CMAKE_SOURCE_DIR/sdk/Kconfig"

