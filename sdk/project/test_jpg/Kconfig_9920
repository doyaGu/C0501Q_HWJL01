mainmenu "Project Configuration"

config TEST_CAP
    bool
    default y
    select HAVE_LCD
    select HAVE_GRAPHICS
    select HAVE_VIDEO

config CMAKE_SOURCE_DIR
    string
    option env="CMAKE_SOURCE_DIR"

config DEF_CHIP_PKG_IT9920
    def_bool y

config DEF_CHIP_REV_A1
    def_bool y  

config DEF_CPU_SM32
	def_bool y
	
config RAM_SIZE
    default "0x4000000"

config RAM_INIT_SCRIPT
    default "IT9850A0_400MHz_tiling_pitch2048.scr"

config LCD_ENABLE
    def_bool y

config LCD_WIDTH
    default "800"

config LCD_HEIGHT
    default "480"
    
config LCD_PITCH
    default "1600"

config LCD_INIT_SCRIPT
    default "1.9920.panel_800_480_innolux_7inch_src565_dst24bit.txt.in"

config BACKLIGHT_ENABLE
    def_bool y

config BACKLIGHT_DUTY_CYCLES
    default "95, 92, 88, 82, 75, 65, 55, 40, 25, 5"

config GPIO_BACKLIGHT_PWM
     default "64"

config BACKLIGHT_DEFAULT_DUTY_CYCLE
    default "5"

config DBG_INIT_SCRIPT
    default "p9920a0_MEM60M_0901TOP_v7.txt"

config BUILD_FFMPEG
    def_bool y

config VIDEO_ENABLE
    def_bool y
	
config JPEG_HW_ENABLE
	default y

config STC_ENABLE
    def_bool y

config FS_FAT
    def_bool y
    
config ITU_UCL_ENABLE
    def_bool y
    
config BUILD_INIPARSER
    def_bool y
    
config BUILD_ITU
    def_bool y

config BUILD_SDL
    def_bool y

config TASK_DRIVE_PROBE
    def_bool y

config RECORD_VIDEO
    def_bool y

source "$CMAKE_SOURCE_DIR/sdk/Kconfig"
