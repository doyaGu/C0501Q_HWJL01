######################################################################
# Project Menu
######################################################################
menu "Elevator"

    config CHECK_FILES_CRC_ON_BOOTING
        bool "Checking files' CRC on booting time"
        default n
        help
            Checking files' CRC on booting time
        help_cht
            開啟開機時檢查檔案 CRC 值的功能。
        help_chs
            开启开机时检查档案 CRC 值的功能。

    config ITU_PATH
        string "ITU files path"
        default "itu/800x480"
        help
            ITU files path
        help_cht
            ITU檔案路徑。
        help_chs
            ITU档案路径。

    config RES_PATH
        string "Resource files path"
        default "res"
        help
            Resource files path
        help_cht
            資源檔案路徑。
        help_chs
            资源档案路径。

    config UPGRADE_GUI
        bool "Upgrade by graphics display"
        default n
        help
            Upgrade by graphics display
        help_cht
            圖形顯示更新。
        help_chs
            图形显示更新。

    config WEBSERVER_PORT
        string "Web server port"
        default "80"
        help
            Web server port
        help_cht
            網頁伺服器埠號。
        help_chs
            网页服务器埠号。

    config UPGRADE_DATA_URL
        string "Upgrade data URL"
        default "http://192.168.1.1/elevator2/"
        help
            Upgrade data URL
        help_cht
            網路更新Data路徑。
        help_chs
            网络更新Data路径。

    config UPGRADE_FW_URL
        string "Upgrade firmware URL"
        default "ftp://192.168.1.1/elevator2/ITEPKG03.PKG"
        help
            Upgrade firmware URL
        help_cht
            網路更新F/W路徑。
        help_chs
            网络更新F/W路径。

